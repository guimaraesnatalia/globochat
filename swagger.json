  "paths": {
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Criar usuario",
        "description": "Criando o usuario.",
        "operationId": "createUser",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "badgalriri"
                },
                "fisrtName": {
                  "type": "string",
                  "example": "Rihanna"
                },
                "lasName": {
                  "type": "string",
                  "example": "Fenty"
                },
                "email": {
                  "type": "string",
                  "example": "riri_htinha@hotmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "whatsmyname123!"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "example": 789
                },
                "username": {
                  "type": "string",
                  "example": "badgalriri"
                },
                "fisrtName": {
                  "type": "string",
                  "example": "Rihanna"
                },
                "lasName": {
                  "type": "string",
                  "example": "Fenty"
                },
                "email": {
                  "type": "string",
                  "example": "riri_htinha@hotmail.com"
                }
              }
            }
          },
          "400": {
            "description": "Invalid values"
          }
        }
      }
    },
    "/user/{username}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get usuario pelo username",
        "description": "",
        "operationId": "getUserByUsename",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "description": "Username do usuario desejado",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "integer",
                  "example": 789
                },
                "username": {
                  "type": "string",
                  "example": "badgalriri"
                },
                "fisrtName": {
                  "type": "string",
                  "example": "Rihanna"
                },
                "lasName": {
                  "type": "string",
                  "example": "Fenty"
                },
                "email": {
                  "type": "string",
                  "example": "riri_htinha@hotmail.com"
                }
              }
            }
          },
          "400": {
            "description": "Invalid username supplied"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/message": {
      "post": {
        "tags": [
          "message"
        ],
        "summary": "Envia a mensagem",
        "description": "envia a mensagem",
        "operationId": "sendMessage",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "example": "Bom dia, grupooo!!"
                },
                "usernameSender": {
                  "type": "string",
                  "example": "badgalriri"
                },
                "idChat": {
                  "type": "integer",
                  "example": 456
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid values"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "user_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:user": "modify user in your account",
        "read:user": "read your user",
        "write:message": "modify user in your account",
        "read:message": "read your user",
        "write:chat": "modify chat in your account",
        "read:chat": "read chat user"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
